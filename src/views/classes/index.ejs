<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Kaoula</title>

        <!-- Bootstrap -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
            crossorigin="anonymous"
        />
        <!-- Fontawesome -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
            integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />
        <!-- Custom -->
        <link rel="stylesheet" href="../../style.css" />
    </head>
    <body>
        <%- include("../components/spinner.ejs") %>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img
                        src="../../kaoula.png"
                        alt="Kaoula Logo"
                        class="rounded-circle"
                        width="45"
                        height="45"
                    />
                </a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div
                    class="collapse navbar-collapse"
                    id="navbarSupportedContent"
                >
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
                    <div class="d-flex" role="login">
                        <% if (user) { %>

                        <div class="dropdown">
                            <button
                                class="btn btn-secondary dropdown-toggle"
                                type="button"
                                dropdown-toggle
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                            >
                                <img
                                    src="<%= user.avatar %>"
                                    alt="<%= user.name %>"
                                    class="rounded-circle"
                                    width="25"
                                    height="25"
                                />

                                <%= user.username %>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/profile">
                                    <i class="fa-solid fa-user-circle"></i>
                                    Mine oplysninger
                                </a>
                                <a class="dropdown-item" href="/classes">
                                    <i class="fa-solid fa-chalkboard-user"></i>
                                    Min klasse
                                </a>

                                <% if (user.role == 5) { %>
                                <a class="dropdown-item" href="/classes/new">
                                    <i class="fa-solid fa-user-plus"></i>
                                    Lav en ny klasse
                                </a>
                                <% } %>
                            </div>
                        </div>

                        <a
                            class="btn btn-danger my-2 my-sm-0"
                            style="margin-left: 5px"
                            href="/auth/logout"
                        >
                            <i class="fa-solid fa-lock-open"></i> Log af
                        </a>

                        <% } else { %>
                        <a
                            class="btn btn-brand my-2 my-sm-0"
                            href="/auth/github"
                        >
                            <i class="fa-solid fa-lock"></i> Log på
                        </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </nav>

        <div class="container mt-5">
            <div class="row">
                <div class="col-md-12">
                    <% if (success.length > 0) { %>
                    <div class="alert alert-success"><%= success %></div>
                    <% } %> <% if (error.length > 0) { %>
                    <div class="alert alert-danger"><%= error %></div>
                    <% } %>

                    <h1>Dine klasser:</h1>

                    <button
                        class="btn btn-mid mb-2"
                        data-bs-toggle="modal"
                        data-bs-target="#join"
                    >
                        <i class="fa-solid fa-plus"></i>
                    </button>

                    <% if(user.role == 5) { %>
                    <a href="/classes/new" class="btn btn-mid mb-2">
                        <i class="fa-solid fa-user-plus"></i>
                    </a>
                    <% } %>

                    <div
                        class="modal fade"
                        id="join"
                        tabindex="-1"
                        aria-labelledby="exampleModalLabel"
                        aria-hidden="true"
                    >
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title text-dark">
                                        Join en ny klasse
                                    </h5>
                                    <button
                                        type="button"
                                        class="btn-close"
                                        data-bs-dismiss="modal"
                                        aria-label="Close"
                                    ></button>
                                </div>
                                <div class="modal-body">
                                    <form id="form">
                                        <div class="form-group">
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="classId"
                                                name="classId"
                                                placeholder="Skriv en gyldig Invitation's kode"
                                                required
                                            />
                                        </div>
                                        <hr />
                                        <button
                                            type="button"
                                            class="btn btn-danger"
                                            data-bs-dismiss="modal"
                                        >
                                            Annuler
                                        </button>
                                        <button
                                            class="btn btn-success"
                                            type="submit"
                                        >
                                            <i
                                                class="fa-solid fa-hand-point-right"
                                            ></i>
                                            Tilmeld
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% for (let userClassData of studentClasses) { %>
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title text-dark">
                                <%= userClassData.name %>
                            </h5>
                            <p class="card-text text-muted">
                                <%= userClassData.description %>
                            </p>
                            <a
                                href="/classes/<%= userClassData.id %>"
                                class="btn btn-mid"
                            >
                                Gå til klasse
                            </a>
                        </div>
                    </div>
                    <% } %> <% if (studentClasses.length == 0) { %>
                    <div class="alert alert-info" role="alert">
                        Du er ikke tilmeldt nogen klasser. Bed din lærer om en
                        invitation.
                    </div>

                    <% } %>
                </div>
            </div>
        </div>

        <script>
            const form = document.getElementById("form");

            form.addEventListener("submit", function (e) {
                e.preventDefault();
                const classId = document.getElementById("classId").value;

                const url = `/invite/${classId}`;

                window.location.href = url;
            });
        </script>

        <!-- Scripts -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
